{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,

    "module": "commonjs",
    "target": "esnext",
    "jsx": "react",

    "allowJs": true, // Process & infer types from .js files.
    "noEmit": true, // Don't emit; allow Babel to transform files.
    "strict": true, // enables --noImplicitAny, --noImplicitThis, --alwaysStrict, --strictBindCallApply, --strictNullChecks, --strictFunctionTypes and --strictPropertyInitialization
    "baseUrl": "./src",
    "paths": {
      "#components/*": ["components/*"],
      "#tcmlabs.fr/*": ["*"]
    }
  },
  "include": ["src/**/*"]
}
